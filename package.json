{
  "name": "miband",
  "version": "0.1.4",
  "description": "Mi Band 2 JS library",
  "author": "Volodymyr Shymanskyy",
  "license": "GPL-3.0",
  "main": "src/miband.js",
  "bin": {
    "miband-test": "bin/miband-test.js"
  },
  "scripts": {
    "start": "ecstatic ./public --port 8080",
